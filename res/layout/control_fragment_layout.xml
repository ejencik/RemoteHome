<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="right"
    android:orientation="vertical" >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:orientation="horizontal" >
    
        <ImageButton
            android:id="@+id/imageButtonVrata"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            android:src="@drawable/vrata" />
        
        <ImageButton
          android:id="@+id/imageButtonBranka"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_margin="20dp"
          android:src="@drawable/branka" />
    </LinearLayout>
    
          <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:orientation="horizontal" >
    
        <ImageButton
            android:id="@+id/imageButtonGaraz"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="20dp"
            android:src="@drawable/garaz" />
        
        <ImageButton
          android:id="@+id/imageButtonBell"
          android:layout_width="90dp"
          android:layout_height="90dp"
          android:layout_margin="20dp"
          android:src="@drawable/bell" />
    </LinearLayout>
      
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <Switch
            android:id="@+id/switch2"
            android:layout_width="191dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:switchMinWidth="80dp"
            android:text="Zalévání"
            android:textColor="#F7DF05"
            android:textOff="Off"
            android:textOn="On" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <Switch
            android:id="@+id/switch3"
            android:layout_width="191dp"
            android:layout_height="53dp"
            android:layout_gravity="center"
            android:switchMinWidth="80dp"
            android:textColor="#F7DF05"
            android:text="Osvětlení"
            android:textOff="Off"
            android:textOn="On" />
    </LinearLayout>

  
        
</LinearLayout>